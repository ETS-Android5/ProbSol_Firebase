        <activity android:name=".ResetPasswordActivity"
        android:parentActivityName=".MainActivity"
        >

    </activity>

        <activity android:name=".TakenoteActivity"
            android:parentActivityName=".MainActivity"
            >

        </activity>
        <activity android:name=".NewNoteActivity"
            android:parentActivityName=".TakenoteActivity"
            >

        </activity>
        <activity android:name=".TipActivity"
            android:parentActivityName=".MainActivity"
            >

        </activity>
        <activity
            android:name=".NewsActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".NewsWebView"
            android:parentActivityName=".NewsActivity" />
